[github]
  user = julienXX
[user]
  email = julien@sideburns.eu
  name = Julien Blanchard
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status -sb
  ci = commit
  br = branch
  co = checkout
  df = diff
  caa = commit -a --amend -C HEAD
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
  insteadOf = "github:"
[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
  insteadOf = "gist:"
[url "git@heroku.com:"]
  insteadOf = "heroku:"
[help]
	autocorrect = 5
[core]
	excludesfile = /Users/julien/.gitignore_global
	editor = vim
[merge]
  tool = mvim
[push]
  default = tracking
[mergetool "mvim"]
  cmd=/usr/local/bin/mvim -d -g $LOCAL $MERGED $REMOTE
  keepbackup=false
[mergetool.ediff]
   cmd = emacs --eval "\\(ediff-merge-files-with-ancestor \"$LOCAL\" \"$REMOTE\" \"$BASE\" nil \"$MERGED\"\\)"
[init]
	templatedir = ~/.git_template
