xterm*selectToClipboard: true
xterm*scrollBar: true
xterm*saveLines: 4096

! Copy / paste
*VT100*translations:      #override \n\
    Shift <Key>Home:    copy-selection(SELECT) \n\
    Shift <Key>Insert:  copy-selection(SELECT) \n\
    Ctrl Shift <Key>C:  copy-selection(SELECT) \n\
    Ctrl Shift <Key>V:  insert-selection(SELECT)

! Use a truetype font and size.
xterm*faceName: Monospace
xterm*faceSize: 13
xterm*geometry: 110x30

! special
*.foreground:   #3a4055
*.background:   #f9f7f3
*.cursorColor:  #3a4055

! black
*.color0:       #2b2b2b
*.color8:       #5a647e

! red
*.color1:       #da4939
*.color9:       #da4939

! green
*.color2:       #a5c261
*.color10:      #a5c261

! yellow
*.color3:       #ffc66d
*.color11:      #ffc66d

! blue
*.color4:       #6d9cbe
*.color12:      #6d9cbe

! magenta
*.color5:       #b6b3eb
*.color13:      #b6b3eb

! cyan
*.color6:       #519f50
*.color14:      #519f50

! white
*.color7:       #e6e1dc
*.color15:      #f9f7f3
